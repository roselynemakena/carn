<div class="page-header">
  <h5 align="center"><strong>Viewing <%= @restaurant.restaurant_name %> </strong></h5>
</div>

<dl class="dl-horizontal">
  <dt><strong>Restaurant name</strong></dt>
  <dd><%= @restaurant.restaurant_name %></dd>
  <dt><strong>Restaurant Description</strong></dt>
  <dd><%= @restaurant.restaurant_description %></dd>
  <dt><strong>Restaurant location</strong></dt>
  <dd><%= @restaurant.restaurant_location %></dd>
  <dt><strong>Images</strong></dt>
  <dd><%= @restaurant.restaurant_image %></dd>
</dl>

<%= link_to "Back",
              restaurants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_path(@restaurant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(@restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
